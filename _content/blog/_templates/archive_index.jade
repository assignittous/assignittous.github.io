      script(src='/_js/bootstrap.min.js')
      script(src='/_js/masonry.pkgd.min.js')
      script(src='/_js/modernizr.custom.js')
      script(src='/_js/page-transitions.js')
      script(src='/_js/easing.min.js')
      script(src='/_js/jquery.svg.js')
      script(src='/_js/jquery.svganim.js')
      script(src='/_js/jquery.backgroundvideo.min.js')
