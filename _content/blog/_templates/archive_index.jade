html
  head
    title AITU Blog
    
    include ../../common/template/head/_base.jade
    include ../../common/template/head/_webfonts.jade

  include ../../common/header_bars/_blog.jade
  
  body
    section.page
      section.blog-4
        .container
          .row
            .col-sm-8
              h1 AITU Archives 
              .archive-periods 
                each year in years
                  h3= year.name
                  ul
                    each month in year.months
                      li
                        a(href="/blog/#{year.name}/#{month.number}.html")= month.name
                      
            include ../../blog/_common/_blog_links.jade             

      include ../../common/_footer.jade    
      
